<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/logo"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/userField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="50sp"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="50sp"
        android:backgroundTint="@color/teal_700"
        android:ems="10"
        android:hint="@string/hintUserTilt"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/hintColor" />

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userField"
        android:layout_marginStart="130sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="130sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/mainBtn"
        app:backgroundTint="@color/teal_700" />

    <TextView
        android:id="@+id/resultInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainBtn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>